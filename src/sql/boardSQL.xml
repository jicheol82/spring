<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<!-- mybatis안에서 array나 list는 map으로 한번 감싼다? -->
	 
	<select id="getArticles" parameterType="java.util.List" resultType="boardDTO">
		
		<![CDATA[
		SELECT * FROM (SELECT rownum r, A.* FROM (SELECT * FROM board ORDER by ref desc, re_step asc)A) WHERE #{end}>=r AND r>=#{start} 
		]]>
	</select>
	<select id="getArticleCount" resultType="int">
		select count(*) from board
	</select>

</mapper>